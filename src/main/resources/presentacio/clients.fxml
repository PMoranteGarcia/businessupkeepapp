<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacio.ClientsController">
   <children>
      <HBox id="nav" alignment="TOP_CENTER" stylesheets="@../css/styles.css">
         <children>
            <Button fx:id="btnOrders" onAction="#goToOrders" text="COMANDES">
               <cursor>
                  <Cursor fx:constant="NONE" />
               </cursor></Button>
            <Separator opacity="0.0" orientation="VERTICAL" prefWidth="10.0" />
            <Button fx:id="btnCustomers" layoutX="10.0" layoutY="10.0" onAction="#goToCustomers" styleClass="active" text="CLIENTS" />
            <Separator opacity="0.0" orientation="VERTICAL" prefWidth="10.0" />
            <Button fx:id="btnProducts" layoutX="101.0" layoutY="10.0" onAction="#goToProducts" text="PRODUCTES" />
            <Separator opacity="0.0" orientation="VERTICAL" prefWidth="10.0" />
            <Button fx:id="btnAbout" layoutX="166.0" layoutY="10.0" onAction="#goToAbout" text="CRÈDITS" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
      <VBox spacing="20.0" VBox.vgrow="NEVER">
         <children>
            <Label id="title" text="Clients" />
            <Button fx:id="btnNewCustomer" mnemonicParsing="false" onAction="#goToNewClient" styleClass="btn_primary" text="NOU CLIENT" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="35.0">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Cercar Clients" />
                  <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="35.0" VBox.vgrow="NEVER">
                     <children>
                        <TextField fx:id="textAreaCercarClients" />
                        <Separator opacity="0.0" orientation="VERTICAL" prefWidth="15.0" />
                        <Button id="searchBtn" fx:id="btnSearchCustomer" mnemonicParsing="false" onAction="#searchCustomer" text="Cercar Client" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <TableView id="llistat" fx:id="ordersList">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn id="columnCustomerEmail" fx:id="columnOrderNumber" editable="false" minWidth="200.0" prefWidth="200.0" text="Email" />
            <TableColumn id="columnCustomerName" fx:id="columnRequiredDate" editable="false" minWidth="120.0" prefWidth="120.0" text="Nom" />
            <TableColumn id="columnBirthDate" fx:id="columnShippedDate" editable="false" minWidth="100.0" prefWidth="100.0" text="Data Naixement" />
            <TableColumn id="columnPhone" fx:id="columnCustomerEmail" editable="false" minWidth="90.0" prefWidth="90.0" text="Phone" />
            <TableColumn id="columnCreditLimit" fx:id="columnCustomerEmail1" editable="false" minWidth="75.0" prefWidth="75.0" text="Crèdit" />
            <TableColumn id="actions" fx:id="columnActions" editable="false" maxWidth="250.0" minWidth="120.0" prefWidth="120.0" text="Accions" />
         </columns>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
